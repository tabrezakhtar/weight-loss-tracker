---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen flex flex-col items-center justify-center bg-transparent pt-4 pb-2 overflow-hidden">
    <div class="w-full max-w-xl mx-auto p-3 sm:p-6 bg-white rounded-2xl flex flex-col gap-4 sm:gap-6 h-full max-h-screen overflow-hidden">
      <header class="flex flex-col items-center gap-1 sm:gap-2 flex-shrink-0">
        <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 flex items-center gap-2">Contact Me!</h1>
        <span class="text-sm sm:text-lg text-slate-500">Any questions, comments or suggestions?</span>
      </header>
      <div class="flex-shrink-0">
        <form name="contact" method="POST" data-netlify="true" class="w-full">
          <div class="flex flex-col gap-6">
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mb-3 sm:mb-4">
              <div class="flex flex-col w-full sm:w-1/2">
                <label class="font-semibold text-sm sm:text-base mb-0.5 sm:mb-1" for="yourname">Name</label>
                <input type="text" name="yourname" id="yourname" required class="text-sm sm:text-base px-2 sm:px-3 py-1.5 sm:py-2 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-blue-400 bg-white" />
              </div>
              <div class="flex flex-col w-full sm:w-1/2">
                <label class="font-semibold text-sm sm:text-base mb-0.5 sm:mb-1" for="email">Email</label>
                <input type="email" name="email" id="email" required class="text-sm sm:text-base px-2 sm:px-3 py-1.5 sm:py-2 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-blue-400 bg-white" />
              </div>
            </div>
            <div class="mb-3 sm:mb-4">
              <label class="font-semibold text-sm sm:text-base mb-0.5 sm:mb-1" for="message">Message</label>
              <textarea name="message" id="message" rows="7" sm:rows="10" required class="text-sm sm:text-base px-2 sm:px-3 py-1.5 sm:py-2 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-blue-400 bg-white w-full"></textarea>
            </div>
            <div class="text-right">
              <button class="flex items-center gap-1 sm:gap-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg shadow transition-all duration-150 text-sm sm:text-base" type="submit">Send</button>
            </div>
          </div>
        </form>
        <div class="mt-4 text-start pt-8">
          <a href="/" class="underline text-blue-600 hover:text-blue-800">‚Üê Back</a>
        </div>
      </div>
    </div>
  </div>
</Layout>


