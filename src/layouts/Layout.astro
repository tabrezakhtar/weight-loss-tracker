---
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cascadia+Code:ital,wght@0,200..700;1,200..700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>Simple Weight Tracker</title>
  </head>
  <body class="h-screen bg-slate-600 flex flex-col font-mono overflow-hidden">
    <main class="flex-1 flex flex-col items-center justify-center overflow-auto px-2">
      <slot />
    </main>
    <footer class="w-full max-w-xl mx-auto text-center py-3 text-slate-400 text-xs sm:text-sm bg-transparent flex flex-row justify-center gap-4">
      <a href="/privacy" class="underline hover:text-blue-400">Privacy Policy</a>
      <a href="/contact" class="underline hover:text-blue-400">Contact Me</a>
    </footer>
  </body>
</html>
