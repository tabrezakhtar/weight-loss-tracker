---
import WeightInput from "./WeightInput.astro";
import WeightList from "./WeightList.astro";
import Graph from "./Graph.astro";
import Units from "./Units.astro";
---

<div class="flex flex-col items-center justify-center bg-transparent pt-4 pb-2">
  <div class="w-full max-w-xl mx-auto p-3 sm:p-6 bg-white rounded-2xl flex flex-col gap-4 sm:gap-6">
    <header class="flex flex-row items-center gap-3 sm:gap-4 justify-center w-full">
      <div class="flex flex-row items-center gap-3 sm:gap-4 mx-auto">
        <img src="/logo.png" alt="Logo" class="w-24 h-24" />
        <h1 class="text-xl sm:text-xl md:text-2xl font-bold text-slate-800 flex items-center gap-2">
          Simple Weight Loss Tracker
        </h1>
      </div>
    </header>
    <span class="text-sm sm:text-base md:text-lg text-slate-500 text-center block">Track your progress and stay motivated!</span>
    <div class="flex-shrink-0">
      <Units />
    </div>
    <div class="flex-shrink-0">
      <Graph />
    </div>
    <div>
      <WeightInput />
    </div>
    <div>
      <WeightList />
    </div>
  </div>
</div>