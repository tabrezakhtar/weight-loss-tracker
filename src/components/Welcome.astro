---
import WeightInput from "./WeightInput.astro";
import WeightList from "./WeightList.astro";
import Graph from "./Graph.astro";
---

<div class="min-h-screen flex flex-col items-center justify-center bg-slate-100">
  <div class="w-full max-w-xl mx-auto p-6 bg-white rounded-2xl shadow-2xl flex flex-col gap-6">
    <header class="flex flex-col items-center gap-2">
      <h1 class="text-3xl font-bold text-slate-800 flex items-center gap-2">Weight Tracker</h1>
      <span class="text-lg text-slate-500">Track your progress and stay healthy!</span>
    </header>
    <Graph />
    <WeightInput />
    <WeightList />
  </div>
</div>