---
import WeightInput from "./WeightInput.astro";
import WeightList from "./WeightList.astro";
import Graph from "./Graph.astro";
import Units from "./Units.astro";
---

<div class="min-h-screen flex flex-col items-center justify-center bg-slate-600 pt-4 pb-2 overflow-hidden">
  <div class="w-full max-w-xl mx-auto p-3 sm:p-6 bg-white rounded-2xl flex flex-col gap-4 sm:gap-6 h-full max-h-screen overflow-hidden">
    <header class="flex flex-col items-center gap-1 sm:gap-2 flex-shrink-0">
      <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-slate-800 flex items-center gap-2">Simple Weight Tracker</h1>
      <span class="text-sm sm:text-base md:text-lg text-slate-500">Track your progress and stay motivated!</span>
    </header>
    <div class="flex-shrink-0">
      <Units />
    </div>
    <div class="flex-shrink-0">
      <Graph />
    </div>
    <div class="flex-shrink-0">
      <WeightInput />
    </div>
    <div class="flex-1 min-h-0 overflow-hidden flex flex-col">
      <WeightList />
    </div>
  </div>
</div>